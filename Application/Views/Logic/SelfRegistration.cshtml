
@{
    Layout = null;
}

<!DOCTYPE html>

<html data-ng-app="landingApp">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <link href="~/dist/css/bower-components.min.css" rel="stylesheet" />
    <script src="~/dist/js/bower-components.min.js"></script>
    <link href="~/dist/css/landing-page.min.css" rel="stylesheet" />
    <script src="~/dist/js/landing-page.min.js"></script>
    <script src="~/dist/js/common.min.js"></script>
    <script src="~/app/Library/toaster.min.js"></script>
    <script src="~/app/app.constants.js"></script>
    <link href="~/app/landingPage/resources/css/toaster.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 title">
                <h2 class="text-center">My information</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4 well">
                <form name="selfRegistrationForm" role="form" ng-controller="SelfReg as sr" ng-submit="sr.signUp()" novalidate>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="firstName">First name</label>
                            <input id="firstName" type="text" placeholder="Enter your first name.."
                                   class="form-control" data-ng-model="sr.selfRegistration.firstName" required />
                        </div>
                        <div class="form-group">
                            <label for="secondName">Last name</label>
                            <input id="secondName" type="text" placeholder="Enter your last name.."
                                   class="form-control" data-ng-model="sr.selfRegistration.lastName" required />
                        </div>
                        <label for="address">Address</label>
                        <input id="companyName" type="text" placeholder="Enter your address.."
                               class="form-control" data-ng-model="sr.selfRegistration.address" required />
                    </div>
                    <div class="form-group">
                        <label for="phoneNumber">Phone number</label>
                        <input id="phoneNumber" type="text" placeholder="Enter phone number.."
                               class="form-control" data-ng-model="sr.selfRegistration.phoneNumber" required />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input id="password" type="password" placeholder="Enter your password.."
                               class="form-control" password-validation data-ng-model="sr.selfRegistration.password" 
                               ng-minlength="6" required />
                    </div>
                    <!--div class="form-group">
                        <label for="confirmPassword">Confirm password</label>
                        <input id="confirmPassword" type="password" placeholder="Confirm your password.."
                               class="form-control" data-ng-model="--"
                               ng-minlength="8"
                               required />
                    </div>-->
                    <input type="submit" class="btn btn-success" value="Register" 
                           ng-disabled="selfRegistrationForm.$invalid" />
                </form>
            </div>
        </div>
    </div>
</body>
</html>